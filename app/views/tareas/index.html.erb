	<thead>
		<th>Tarea</th>
		<th>Editar</th>
		<th>Eliminar</th>
	</thead>
	<tbody>
	<% @tareas.each do |tarea| %>
		<tr>
			<td><%= link_to tarea.titulo,tarea %></td>
