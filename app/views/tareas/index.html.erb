			<td>
				<%= link_to "Eliminar", tarea, method: "delete", class: "btn btn-danger", data: {confirm: "Â¿Quieres eliminar esta tarea?"} %>
			</td>						
		</tr>
	<% end %>
	</tbody>
</table>